generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores Store[]

  @@index([email])
  @@map(name: "users")
}

model Store {
  id         String   @id @unique
  name       String
  slug       String   @unique
  ownerId    String
  coverImage String?
  logo       String?
  favicon    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  owner    User      @relation(fields: [ownerId], references: [id], onDelete: Cascade)
  products Product[]

  @@index([slug])
  @@map(name: "stores")
}

model Product {
  id          String   @id @unique
  name        String
  description String?
  image       String?
  featured    Boolean  @default(false)
  price       Int
  category    String
  quantity    Int      @default(1)
  storeId     String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  store Store @relation(fields: [storeId], references: [id], onDelete: Cascade)

  @@map(name: "products")
}
