generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @unique
  name      String
  email     String   @unique
  password  String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  stores Store[]

  @@index([email])
  @@map(name: "users")
}

model Store {
  id         String   @id @unique
  name       String
  slug       String   @unique
  ownerId    String
  coverImage String?
  logo       String?
  favicon    String?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  owner User @relation(fields: [ownerId], references: [id], onDelete: Cascade)

  @@index([slug])
  @@map(name: "stores")
}
